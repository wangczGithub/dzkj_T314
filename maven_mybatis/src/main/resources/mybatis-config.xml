<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--设置-->
    <settings>
        <!--设置mybatis在执行过程中输出日志，
        日志中包括了执行了哪些sql及其sql的执行过程-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>

        <!--设置开启mybatis对延迟加载功能的支持，默认为false-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!--设置积极加载为false,即为懒加载-->
        <setting name="aggressiveLazyLoading" value="false"/>
        <!--开启二级缓存，默认就是开启的，即默认值为true-->
        <!--<setting name="cacheEnabled" value="true"/>-->
    </settings>

	<!--配置连接数据库的环境-->
    <!--environments配置多个数据库环境-->
    <!--default指定默认使用哪个环境-->
    <environments default="mysqlDev">
        <!--environment配置每个数据库环境-->
       <environment id="mysqlDev">
           <!--transactionManager配置事务管理器-->
           <!--type指定事务管理器的类型-->
           <transactionManager type="JDBC"/>
           <!--dataSource数据源，是指定连接数据库的相关信息-->
           <!--type为类型，通常指定为连接池POOLED-->
           <dataSource type="POOLED">
               <!--driver指定驱动-->
               <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
               <!--url指定连接数据库的url-->
               <property name="url" value="jdbc:mysql://10.10.4.46:3306/developer1"/>
               <!--username指定用户名-->
               <property name="username" value="root"/>
               <!--password指定密码-->
               <property name="password" value="Root_123!"/>
           </dataSource>
       </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/SusheMapper.xml"></mapper>
    </mappers>


</configuration>
